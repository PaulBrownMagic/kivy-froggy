#:import C kivy.utils.get_color_from_hex

<FroggyGame>:
    score_lbl: score
    Label:
        id: score
        text: ""
        center_x: root.center_x
        top: root.top

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Froggy!"
            size_hint_y: 1
        Sprite:
            source:'images/FrogLilypad_1024x1024.png'
            size_hint_y: 2
        Button:
            text: 'Play'
            size_hint_y: 1
            on_release: root.manager.current = 'froggy'

<Label>:
    font_size: '112sp'
    font_name: 'd-puntillas'
    color: C('#64DD17')
<Button>:
    valign: 'top'
    font_size: '45sp'
    background_color: C('#00BCD4')