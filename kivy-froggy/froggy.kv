#:import C kivy.utils.get_color_from_hex
#: import WipeTransition kivy.uix.screenmanager.WipeTransition
#: import Window kivy.core.window.Window

<FroggyScreenManager>:
    HomeScreen:
    SummaryScreen:
    FroggyScreen:


<FroggyScreen>:
    name: 'froggy'

<FroggyGame>:
    canvas.before:
        Color:
            rgba: C('#00BCD4')
        Rectangle:
            pos: self.pos
            size: self.size
    score_lbl: score
    TitleLabel:
        id: score
        text: ""
        center_x: root.center_x
        top: root.top - self.height - 10
<HomeScreen>:
    name: 'home'
    canvas.before:
        Color:
            rgba: C('#00BCD4')
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 4
            Sprite:
                source:'images/FrogLilypad_1024x1024.png'
                allow_stretch: True
                size_hint_x: 1
            FloatLayout:
                size_hint_x: 0
                SettingsButton:
                    text: "C"
                    pos: Window.width- self.width - 20, Window.height-self.height - 10
                    on_press: app.open_settings()
        FroggyButton:
            text: 'Play Froggit 101'
            size_hint_y: 1
            on_release: root.manager.current = 'froggy'

<SummaryScreen>:
    name: 'summary'
    canvas.before:
        Color:
            rgba: C('#004A4D44')
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        TitleLabel:
            id: title
            text:""
            size_hint_y: 2
        Label:
            id: captured
            text: ""
        Label:
            id: max_score
            text: ""
        BoxLayout:
            size_hint_y: 1
            spacing: '5dp'
            FroggyButton:
                text: 'Play Again!'
                on_release: root.manager.current = 'froggy'
                size_hint_x: 2
            FroggyButton:
                text: 'Home'
                on_release: root.manager.current = 'home'
                size_hint_x: 1


<Label>:
    font_size: '55sp'
    font_name: 'd-puntillas'
    color: C('#64DD17')
    size_hint_y: 1
<TitleLabel@Label>:
    font_size: '85sp'
<Button>:
    font_size: '35sp'
    background_color: C('#006064')
    background_normal: 'images/button_normal.png'
    background_down: 'images/button_down.png'
    border: (0, 3, 2, 3)
<FroggyButton@Button>
    font_size: '65sp'
<SettingsButton@Button>:
    font_name: 'heydings'
    font_size: '50sp'
    size_hint: None, None
    size: '125dp','125dp'
    background_normal: 'images/clear.png'
    background_down: 'images/clear.png'
    border: (1, 1, 1, 1)
    color: C('#1f4508')
