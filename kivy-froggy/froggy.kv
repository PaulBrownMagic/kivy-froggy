#:import C kivy.utils.get_color_from_hex
#: import WipeTransition kivy.uix.screenmanager.WipeTransition
#: import Window kivy.core.window.Window

<FroggyScreenManager>:
    HomeScreen:
    SummaryScreen:
    FroggyScreen:
    TopScoresScreen:


<FroggyScreen>:
    name: 'froggy'

<FroggyGame>:
    canvas.before:
        Color:
            rgba: C('#00BCD4')
        Rectangle:
            pos: self.pos
            size: self.size
    score_lbl: score
    TitleLabel:
        id: score
        text: ""
        center_x: root.center_x
        top: root.top - self.height - 10
<HomeScreen>:
    name: 'home'
    canvas.before:
        Color:
            rgba: C('#00BCD4')
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        Sprite:
            size_hint_y: 4
            source:'images/FrogLilypad_1024x1024.png'
            allow_stretch: True
            size_hint_x: 1
        BoxLayout:
            size_hint_y: 1
            SettingsButton:
                size_hint_x: 1
                text: 'x'
                pos: Window.width- self.width - 20, Window.height-self.height - 10
                on_press: app.open_settings()
            FroggyButton:
                size_hint_x: 8
                text: 'Froggit 101'
                on_release: root.manager.current = 'froggy'
            SettingsButton:
                size_hint_x: 1
                text: "z"
                pos: Window.width- self.width - 20, Window.height-self.height - 10
                on_press: root.manager.current = 'top_scores'

<SummaryScreen>:
    name: 'summary'
    canvas.before:
        Color:
            rgba: C('#004A4D44')
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        TitleLabel:
            id: title
            text:""
            size_hint_y: 2
        Label:
            id: captured
            text: ""
        Label:
            id: max_score
            text: ""
        BoxLayout:
            size_hint_y: 1
            spacing: '5dp'
            FroggyButton:
                text: 'Play Again!'
                on_release: root.manager.current = 'froggy'
                size_hint_x: 2
            FroggyButton:
                text: 'Home'
                on_release: root.manager.current = 'home'
                size_hint_x: 1
<TopScoresScreen>:
    canvas.before:
        Color:
            rgba: C('#004A4D44')
        Rectangle:
            pos: self.pos
            size: self.size
    name: 'top_scores'
    easy: Easy
    medium: Medium
    hard: Hard
    impossible: Impossible
    BoxLayout:
        orientation: 'vertical'
        TitleLabel:
            text: "Top SCORES"
        Label:
            id: Easy
        Label:
            id: Medium
        Label:
            id: Hard
        Label:
            id: Impossible

<Label>:
    font_size: '55sp'
    font_name: 'd-puntillas'
    color: C('#64DD17')
    size_hint_y: 1
<TitleLabel@Label>:
    font_size: '85sp'
<Button>:
    font_size: '35sp'
    background_color: C('#006064')
    background_normal: 'images/button_normal.png'
    background_down: 'images/button_down.png'
    border: (0, 3, 2, 3)
<FroggyButton@Button>
    font_size: '65sp'
<SettingsButton@Button>:
    font_name: 'heydings'
    font_size: '50sp'

